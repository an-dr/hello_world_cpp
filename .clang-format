# https://clang.llvm.org/docs/ClangFormatStyleOptions.html#
Language: Cpp
BasedOnStyle: LLVM
SpacesBeforeTrailingComments: 2
IndentWidth: 4
AccessModifierOffset: -3
SortIncludes: true
ColumnLimit: 80
IncludeBlocks: Preserve
IncludeCategories:
  - Regex: '^<.*\.h>'
    Priority: 2
  - Regex: '^<.*\.hpp>'
    Priority: 2
  - Regex: '^<.*>'
    Priority: 1
  - Regex: '^".*\.h"'
    Priority: 4
  - Regex: '^".*"'
    Priority: 4
  - Regex: '.*'
    Priority: 5
